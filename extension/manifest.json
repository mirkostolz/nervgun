{
  "manifest_version": 3,
  "name": "nervgun",
  "version": "0.1.0",
  "description": "Attacke auf das, was uns nervt — schnelle Erfassung von Ärgernissen",
  "action": { "default_popup": "popup.html" },
  "permissions": ["activeTab", "storage"],
  "host_permissions": ["https://*.yourcompany.com/*", "http://localhost:*/*"],
  "commands": {
    "open-collector": {
      "suggested_key": { "default": "Ctrl+Shift+A", "mac": "Command+Shift+A" },
      "description": "Open nervgun"
    }
  }
}